# EditorConfig helps maintain consistent coding styles across editors & IDEs.
# See: https://editorconfig.org
root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Makefiles must use tabs
[Makefile]
indent_style = tab
indent_size = 4

# Markdown: keep trailing spaces (for line breaks) and don't strip whitespace
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
shell_variant = bash
indent_style = space
indent_size = 2

# Top-level executable scripts without extension (commands, main dispatcher)
[commands/*]
indent_style = space
indent_size = 2

[gex]
indent_style = space
indent_size = 2

# Bats test files
[*.bats]
indent_style = space
indent_size = 2

# JSON / YAML (future config files)
[*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# Ignore potential vendored directories if added later
[vendor/**]
indent_style = space
indent_size = 2

# Optional: Git attributes / ignore files
[.gitattributes]
indent_style = space
indent_size = 2

[.gitignore]
indent_style = space
indent_size = 2
